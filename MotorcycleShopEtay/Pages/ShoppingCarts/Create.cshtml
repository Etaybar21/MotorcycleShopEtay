@page
@model MotorcycleShopEtay.Pages.ShoppingCarts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ShoppingCart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShoppingCart.ShoppingId" class="control-label"></label>
                <input asp-for="ShoppingCart.ShoppingId" class="form-control" />
                <span asp-validation-for="ShoppingCart.ShoppingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCart.CustomerId" class="control-label"></label>
                <select asp-for="ShoppingCart.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId">
                    <option>select id</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCart.ShoppingDate" class="control-label"></label>
                <input asp-for="ShoppingCart.ShoppingDate" class="form-control" />
                <span asp-validation-for="ShoppingCart.ShoppingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

